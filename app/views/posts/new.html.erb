<h1>tournamentリスト</h1>
<h3>新規tournament</h3>
<%= form_for @posts do |f| %>
  <div class="field">
    <%= f.label :title,"予定名" %>
    <%= f.text_field :title, :size => 20 %>
    <br>
    <%= f.label :start_time,"始まり" %>
    <%= f.datetime_field :start_time %>
    <%= f.label :end_time,"終わり" %>
    <%= f.datetime_field :end_time %>
    <br>
    <%= f.label :gamename %>
    <%= f.text_field :gamename, :size => 140 %>
    <br>
    <%= f.label :score %>
    <%= f.text_field :score, :size => 140 %>
    <br>
    <%= f.label :image %>
    <%= f.text_field :image, :size => 140 %>
    <br>
    <%= f.label :day %>
    <%= f.text_field :day, :size => 140 %>
    <br>
    <%= f.label :match %>
    <%= f.text_field :match, :size => 140 %>
    <br>
    <%= f.submit "tournamentを保存する" %>

  </div>
<% end %>
<%= link_to "tournament一覧に戻る", posts_index_path %>